#include "stdafx.h"
#include "conio.h"
#include <iostream>
#include <string>

using namespace std;

string invertir(string pal);

void main()
{  string A,B;
   int band;
   cout<<"ingresar la palabra a verificar:";
   getline(cin,A);
   B=invertir(A);
   band=A.compare(B);
   if(band==0)
	  cout<<"es palindromo:";
   else 
		cout << "No es Palindromo";
   getch();
}

string invertir(string pal)
{  int TAM;
   int i;
   char aux;
   TAM=pal.length();
   for (i=0;i<TAM/2;i++)
   {
	   aux=pal.at(i);
       pal.at(i)=pal.at(TAM-i-1);
       pal.at(TAM-i-1)=aux;
   }
   return (pal);
}
