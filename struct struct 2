

//elemento mayor de las matrices 
#include "stdafx.h"
#include <iostream>
#include <conio.h>

using namespace std;

#define fil 10
#define col 10

struct elem_may
{int mat[fil][fil];
};

void cargar(elem_may M[fil][fil], int n);
void mostrar(elem_may M[fil][fil], int n);
float elementomay(elem_may M[fil][fil], int n);

void main()
{int n,MAYOR;
elem_may M[fil][fil];
	do
	{
		cout<<"Ingrese tamaÃ±o de matriz NXN: ";
		cin>>n;
	}
	while((n<0)||(n>fil));
	cargar(M,n);
	mostrar(M,n);
	MAYOR=elementomay(M, n);
	cout<<"El elemento mayor es: "<<MAYOR<<endl;
	getch();
}

void cargar(elem_may M[fil][fil], int n)
{int i,j,k,l;
	for(i=0;i<n;i++)
		{for(j=0;j<n;j++)
			{for(k=0;k<n;k++)
				{for(l=0;l<n;l++)
					{	do
							{	
							cout<<"Ingrese valor ["<<i<<"]["<<j<<"]["<<k<<"]["<<l<<"]: ";
							cin>>M[i][j].mat[k][l];
							}while(M[i][j].mat[k][l]<=0 || M[i][j].mat[k][l]>=100);
					}
				}
			}
		}
}
 
void mostrar(elem_may M[fil][fil], int n)
{int i, j,k,l;
	for(i=0;i<n;i++)
		{for(j=0;j<n;j++)
			{for(k=0;k<n;k++)
				{for(l=0;l<n;l++)
					{cout<<M[i][j].mat[k][l]<<" ";
					}cout<<endl;
				}cout<<endl;
			}cout<<endl;
		}cout<<endl;
}

float elementomay(elem_may M[fil][fil], int n)
{int i, j,k,l,may=M[0][0].mat[0][0];
	for(i=0;i<n;i++)
		{for(j=0;j<n;j++)
			{for(k=0;k<n;k++)
				{for(l=0;l<n;l++)
					{
						if(M[i][j].mat[k][l]>may)
                          may=M[i][j].mat[k][l];
					}
				}cout<<endl;
			}cout<<endl;
		}cout<<endl;
	return(may);
}

